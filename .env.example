# Environment Configuration for OmniDesk AI
# Copy this file to .env and update with your actual values

# =============================================================================\n# APPLICATION SETTINGS\n# =============================================================================\nAPP_NAME=\"OmniDesk AI Backend\"\nVERSION=\"1.0.0\"\nENVIRONMENT=\"development\"  # development, staging, production\nDEBUG=true\nLOG_LEVEL=\"INFO\"  # DEBUG, INFO, WARNING, ERROR\n\n# =============================================================================\n# DATABASE CONFIGURATION\n# =============================================================================\nPOSTGRES_USER=omnidesk\nPOSTGRES_PASSWORD=omnidesk123\nPOSTGRES_DB=omnidesk\nDATABASE_URL=postgresql://omnidesk:omnidesk123@localhost:5432/omnidesk\n\n# =============================================================================\n# AI SERVICES\n# =============================================================================\n# Anthropic Claude API (Required for AI features)\nANTHROPIC_API_KEY=your_anthropic_api_key_here\n\n# =============================================================================\n# VECTOR DATABASE (Qdrant)\n# =============================================================================\nQDRANT_URL=http://localhost:6333\n# QDRANT_API_KEY=your_qdrant_api_key_for_cloud  # Optional for Qdrant Cloud\n\n# =============================================================================\n# REDIS CONFIGURATION\n# =============================================================================\nREDIS_URL=redis://localhost:6379/0\nREDIS_MAX_CONNECTIONS=10\nREDIS_TIMEOUT=5\n\n# =============================================================================\n# EMAIL INTEGRATION\n# =============================================================================\nSMTP_HOST=smtp.gmail.com\nSMTP_PORT=587\nSMTP_USERNAME=your_email@gmail.com\nSMTP_PASSWORD=your_app_password_here\n\n# =============================================================================\n# SMS INTEGRATION (Twilio)\n# =============================================================================\n# TWILIO_ACCOUNT_SID=your_twilio_account_sid\n# TWILIO_AUTH_TOKEN=your_twilio_auth_token\n# TWILIO_PHONE_NUMBER=your_twilio_phone_number\n\n# =============================================================================\n# EXTERNAL SYSTEM INTEGRATIONS\n# =============================================================================\n# GLPI Integration\n# GLPI_URL=https://your-glpi-instance.com\n# GLPI_USER_TOKEN=your_glpi_user_token\n# GLPI_APP_TOKEN=your_glpi_app_token\n\n# SAP Solution Manager Integration\n# SOLMAN_URL=https://your-solman-instance.com\n# SOLMAN_USERNAME=your_solman_username\n# SOLMAN_PASSWORD=your_solman_password\n\n# HST API Integration\n# HST_API_KEY=your_hst_api_key\n# HST_API_URL=https://api.hst.io\n\n# =============================================================================\n# SECURITY CONFIGURATION\n# =============================================================================\nSECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters\nACCESS_TOKEN_EXPIRE_MINUTES=30\nPASSWORD_HASH_ALGORITHM=bcrypt\nJWT_ALGORITHM=HS256\nRATE_LIMIT_PER_MINUTE=100\n\n# =============================================================================\n# CORS AND SECURITY\n# =============================================================================\n# Comma-separated list of allowed origins\nBACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-frontend-domain.com\nTRUSTED_HOSTS=localhost,127.0.0.1,your-production-domain.com\n\n# =============================================================================\n# FRONTEND CONFIGURATION\n# =============================================================================\nNEXT_PUBLIC_API_URL=http://localhost:8000\nNEXT_PUBLIC_APP_NAME=\"OmniDesk AI\"\nNEXT_PUBLIC_ENVIRONMENT=development\n\n# =============================================================================\n# MONITORING AND ANALYTICS\n# =============================================================================\n# Sentry for error tracking (optional)\n# SENTRY_DSN=your_sentry_dsn_here\n\n# Google Analytics (optional)\n# NEXT_PUBLIC_GA_ID=your_google_analytics_id\n\n# =============================================================================\n# PRODUCTION-SPECIFIC SETTINGS\n# =============================================================================\n# SSL/TLS Configuration for production\n# SSL_CERT_PATH=/path/to/ssl/cert.pem\n# SSL_KEY_PATH=/path/to/ssl/key.pem\n\n# Production database with connection pooling\n# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require&pool_size=20\n\n# =============================================================================\n# DEVELOPMENT SETTINGS\n# =============================================================================\n# Set to true to enable development features\nDEVELOPMENT_MODE=true\n\n# Auto-reload on code changes (development only)\nRELOAD=true\n\n# =============================================================================\n# DOCKER SPECIFIC\n# =============================================================================\n# These are used by docker-compose.yml\nCOMPOSE_PROJECT_NAME=omnidesk\nDOCKER_BUILDKIT=1\n\n# =============================================================================\n# BACKUP AND MAINTENANCE\n# =============================================================================\n# Database backup configuration\n# BACKUP_SCHEDULE=\"0 2 * * *\"  # Daily at 2 AM\n# BACKUP_RETENTION_DAYS=30\n# BACKUP_S3_BUCKET=your-backup-bucket\n\n# =============================================================================\n# FEATURE FLAGS\n# =============================================================================\n# Enable/disable specific features\nFEATURE_AI_CLASSIFICATION=true\nFEATURE_VECTOR_SEARCH=true\nFEATURE_MULTI_LANGUAGE=true\nFEATURE_EMAIL_INTEGRATION=true\nFEATURE_SMS_INTEGRATION=false\nFEATURE_GLPI_INTEGRATION=false\nFEATURE_ANALYTICS_DASHBOARD=true\n\n# =============================================================================\n# NOTES\n# =============================================================================\n# 1. Never commit the actual .env file to version control\n# 2. Use strong, unique passwords for production\n# 3. Regularly rotate API keys and secrets\n# 4. Enable SSL/TLS in production\n# 5. Use environment-specific configurations