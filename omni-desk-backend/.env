# Environment
ENVIRONMENT=development
DEBUG=True

# Database (Neon Postgres)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.postgres.neon.tech/omnidesk?sslmode=require

# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Database (Qdrant)
QDRANT_URL=https://your-cluster.qdrant.tech:6333
QDRANT_API_KEY=your_qdrant_api_key

# External Integrations
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# GLPI
GLPI_URL=https://your-glpi.com/apirest.php
GLPI_USER_TOKEN=your_user_token
GLPI_APP_TOKEN=your_app_token

# Solman (SAP)
SOLMAN_URL=https://your-solman-server
SOLMAN_USERNAME=your_username
SOLMAN_PASSWORD=your_password

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO